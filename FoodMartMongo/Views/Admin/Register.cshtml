@model FoodMartMongo.Entities.ApplicationUser
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}
@Html.ValidationSummary()
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol | Purple Admin</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/purple-admin/assets/images/favicon.png" />

    <!-- CSS -->
    <link href="~/purple-admin/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/purple-admin/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/purple-admin/assets/css/style.css" rel="stylesheet" />

    <!-- Scripts -->
    <script src="~/purple-admin/assets/vendors/js/vendor.bundle.base.js"></script>
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0 justify-content-center">
                    <div class="col-lg-4">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-center mb-4">
                                <img src="~/purple-admin/assets/images/logo.svg" alt="logo" />
                            </div>
                            <h4 class="text-center">Yönetici Kayıt Ekranı</h4>
                            <form asp-action="Register" method="post" class="pt-3">
                                <div class="form-group">
                                    <label for="Username">Kullanıcı Adı</label>
                                    <input asp-for="Username" type="text" class="form-control form-control-lg" placeholder="Kullanıcı adınızı girin" />
                                </div>
                                <div class="form-group">
                                    <label for="Password">Şifre</label>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Şifrenizi girin" />
                                </div>
                                <div class="form-group">
                                    <label for="ImageUrl">Kullanıcı Görsel (URL)</label>
                                    <input asp-for="ImageUrl" type="text" class="form-control form-control-lg" placeholder="Profil görsel bağlantısı" />
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten hesabınız var mı? <a href="/Admin/Login/" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <!-- Main JS -->
    <script src="~/purple-admin/assets/js/off-canvas.js"></script>
    <script src="~/purple-admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/purple-admin/assets/js/misc.js"></script>
</body>
</html>
