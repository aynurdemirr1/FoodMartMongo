@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}
@Html.ValidationSummary()

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Giriş Yap | Purple Admin</title>

    <!-- CSS -->
    <link href="~/purple-admin/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/purple-admin/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/purple-admin/assets/css/style.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/purple-admin/assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0 justify-content-center">
                    <div class="col-lg-4">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-center mb-4">
                                <img src="~/purple-admin/assets/images/logo.svg" alt="logo" />
                            </div>
                            <h4 class="text-center">Admin Paneli Giriş Ekranı</h4>

                            <form asp-action="Login" method="post" class="pt-3">
                                <div class="form-group">
                                    <label for="username">Kullanıcı Adı</label>
                                    <input type="text" name="username" class="form-control form-control-lg" id="username" placeholder="Kullanıcı adınızı girin" />
                                </div>
                                <div class="form-group">
                                    <label for="password">Şifre</label>
                                    <input type="password" name="password" class="form-control form-control-lg" id="password" placeholder="Şifrenizi girin" />
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabınız yok mu? <a href="/Admin/Register/" class="text-primary">Hesap Oluştur</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <!-- Scripts -->
    <script src="~/purple-admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/purple-admin/assets/js/off-canvas.js"></script>
    <script src="~/purple-admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/purple-admin/assets/js/misc.js"></script>
</body>
</html>
